---
import { SKILLS } from "../config";
import { Icon } from "astro-icon/components";
---

<section id="skills">
  <h2>My Skills</h2>
  <div class="flex flex-wrap sm:justify-between">
    {
      SKILLS.filter((skill) => skill.active).map(({ name, icon }) => (
        <div class="flex flex-col p-2">
          <Icon class="h-8 w-8" aria-hidden="true" name={icon} />
        </div>
      ))
    }
  </div>
</section>

<style>
  /* ===== projects Section ===== */
  #skills {
    @apply mb-1 ml-1 py-12;
  }

  h2:before {
    content: "#";
    @apply mr-2;
  }

  h2 {
    @apply text-lg font-bold mb-4;
  }
</style>
